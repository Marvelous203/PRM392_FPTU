<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAB 7 - Camera Permission"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="48dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Học cách xử lý permission cho camera\nvà chụp ảnh trong Android"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="32dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_camera_permission"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Camera Permission Demo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_back_lab7"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Back to Main Menu"
        android:textSize="18sp"
        android:backgroundTint="@android:color/holo_red_light" />

</LinearLayout>