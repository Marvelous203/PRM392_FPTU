<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lab 4 - Food &amp; Drink Selection"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_selected_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Món ăn đã chọn: Chưa chọn"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="#F0F0F0"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tv_selected_drink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đồ uống đã chọn: Chưa chọn"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="#F0F0F0"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btn_choose_food"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Chọn thức ăn"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_choose_drink"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Chọn đồ uống"
            android:textSize="18sp"
            android:layout_marginBottom="32dp" />

        <TextView
            android:id="@+id/tv_summary_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chưa có món nào được chọn"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:fontFamily="monospace"
            android:gravity="start"
            android:elevation="2dp"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Main Menu"
            android:backgroundTint="@android:color/holo_red_light" />

    </LinearLayout>
</ScrollView>