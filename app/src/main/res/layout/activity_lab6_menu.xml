<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_lab6_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lab 6 - Menu Types"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="48dp" />

    <Button
        android:id="@+id/btn_option_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Option Menu Demo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_popup_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Popup Menu Demo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_context_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Context Menu Demo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Main Menu"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@android:color/darker_gray" />

</LinearLayout>