<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Left side: Subjects -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/subject_android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Android"
                android:background="@color/Purple"
                android:textColor="@color/Red"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/subject_php"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="PHP"
                android:background="@color/Cyan"
                android:textColor="@color/Crimson"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/subject_sql"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="SQL"
                android:background="@color/Teal"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/subject_python"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="PYTHON"
                android:background="@color/Orange"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/block11"
                android:layout_width="98dp"
                android:layout_height="183dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="312dp"
                android:layout_marginEnd="8dp"
                android:background="@color/Brown"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Right side: Constraint Layout with numbered blocks -->
        <!-- Thay thế phần ConstraintLayout bằng code này -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        
            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/Blue"
                android:gravity="center"
                android:padding="8dp"
                android:text="Linear Layout KPT"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        
            <!-- Block 1 (Purple) -->
            <TextView
                android:id="@+id/block1"
                android:layout_width="109dp"
                android:layout_height="147dp"
                android:layout_marginTop="8dp"
                android:background="@color/Purple"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />
        
            <!-- Block 3 (Light Blue) -->
            <TextView
                android:id="@+id/block3"
                android:layout_width="81dp"
                android:layout_height="199dp"
                android:background="@color/LightBlue"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/block1"
                app:layout_constraintTop_toBottomOf="@+id/title" />
        
            <!-- Block 4 (Yellow) -->
            <TextView
                android:id="@+id/block4"
                android:layout_width="111dp"
                android:layout_height="98dp"
                android:background="@color/Yellow"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/block1" />
        
            <!-- Block 2 (Dark Green) -->
            <TextView
                android:id="@+id/block2"
                android:layout_width="70dp"
                android:layout_height="207dp"
                android:background="@color/DarkGreen"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/block3"
                app:layout_constraintTop_toBottomOf="@+id/title" />
        
            <!-- Block 5 (Red) -->
            <TextView
                android:id="@+id/block5"
                android:layout_width="71dp"
                android:layout_height="173dp"
                android:background="@color/Crimson"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/block1"
                app:layout_constraintTop_toBottomOf="@+id/block3" />
        
            <!-- Block 7 (Beige) -->
            <TextView
                android:id="@+id/block7"
                android:layout_width="108dp"
                android:layout_height="327dp"
                android:background="@color/Beige"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/block4" />
        
            <!-- Block 6 (Brown) - di chuyển vào trong ConstraintLayout -->
            <TextView
                android:id="@+id/block6"
                android:layout_width="68dp"
                android:layout_height="208dp"
                android:layout_marginTop="164dp"
                android:layout_marginEnd="4dp"
                android:background="@color/Brown"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/block2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!-- Back button at the bottom -->
    <Button
        android:id="@+id/btn_back_to_lab1_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Lab1 Menu"
        android:layout_margin="16dp" />

</LinearLayout>