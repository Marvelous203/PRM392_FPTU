<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn đồ uống"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center" />

    <RadioGroup
        android:id="@+id/radio_group_drink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <RadioButton
            android:id="@+id/radio_pepsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pepsi - 15,000 VNĐ"
            android:textSize="18sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/radio_heineken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heineken - 25,000 VNĐ"
            android:textSize="18sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/radio_tiger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiger - 22,000 VNĐ"
            android:textSize="18sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/radio_saigon_do"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sài Gòn Đỏ - 20,000 VNĐ"
            android:textSize="18sp"
            android:padding="12dp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đặt món"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy"
            android:textSize="16sp"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>